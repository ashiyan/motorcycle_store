// Font for category titles
@font-face
    font-family "Old Stamper"
    font-style normal
    src url(../fonts/Old_Stamper.ttf)
    
    
// Font for menu and submenu
@font-face
    font-family "Octin Stencil"
    font-style normal
    src url(../fonts/Octin_Stencil.ttf)
    
    
// Font for items names and descriptions
@font-face
    font-family "Marvel"
    font-style normal
    src url(../fonts/Marvel.ttf)


.b-header
    position absolute
    display flex
    justify-content space-between
    align-items center
    width 100%
    height 150px
    z-index 1
    &__logo
        margin 25px
        transition all 200ms

.b-hednav
    margin 25px
    position relative
    &__name
        display none
        text-transform uppercase
        color white
    &__main-menu
        display flex
        position relative
        height 40px
        justify-content flex-end
        align-items center
    &__main-item 
        display block
        padding 5px 10px 10px 10px
        margin 0 10px
        color white
        text-transform uppercase
        font-family "Octin Stencil"
        position relative
        &:hover
            display block
            color #e3a237
            cursor pointer
        &:hover .b-hednav__sub-menu
            visibility visible
            max-height 1000px
            transition-delay 200ms
            transition visibility 200ms, max-height 600ms ease-in-out
    &__sub-menu
        position absolute
        border-top 2px solid white
        border-bottom 2px solid white
        background rgba(255,255,255,0.3)
        top 30px
        width 150px
        max-height 0
        visibility hidden
        overflow hidden
        transition all 200ms
        &:hover
            visibility visible
            max-height 1000px
    &__sub-item
        display block
        padding 4px 10px
        text-transform none
        font-family "Octin Stencil"
        font-weight normal
        color white
        &:hover
            background-color #e3a237
            cursor pointer
				
.b-slider
    &__radio
        display none
    &__img
        width 100%
        height auto
        display none
        opacity 0
    &__number-list
        display flex
        position absolute
        width 200px
        height 15px
        right 40px
        top 25px
        justify-content space-between
        z-index 2
    &__number
        width 30px
        height 10px
        border-radius 5px
        background-color rgba(255,255,255,.5)
        border 2px solid rgba(0,0,0,.8)
        box-shadow 0 0 5px rgba(0,0,0,.7) inset
        &::after
            content ''
            width 26px
            height 6px
            border-radius 5px
            margin 2px
            position absolute
            background-color rgba(0,0,0,.8)
            opacity 0
            
for i in (1..5)
    .b-slider__img:nth-of-type({i})
        background url("../img/slide-0" + i + ".jpg") no-repeat
        background-size cover
    
for i in (1..5)
    .b-slider__radio:nth-of-type({i}):checked ~ .b-slider__img:nth-of-type({i})
        display block
        opacity 1

for i in (1..5)
    .b-slider__radio:nth-of-type({i}):checked ~ .b-slider__number-list .b-slider__number:nth-of-type({i})::after
        opacity 1
    
.b-category
    &__header
        background-color rgba(255,255,255,.3)
        text-align center
        margin 30px 0
        font-family "Old Stamper"
        text-transform uppercase
        font-size 200%
    &__wrapper
        display flex
        flex-wrap wrap
        justify-content space-around
        margin 30px 0
    &__item
        margin 10px
        width 200px
        height 200px
        font-family "Marvel"
        font-weight bold
        text-align center
        transition all 100ms
        &:hover
            transform scale(1.05)
            outline 3px solid rgba(0,0,0,.8)
            transition all 100ms
    &__name
        margin-top 15px
        text-transform uppercase

for i in (1..4)
    .b-category__item:nth-of-type({i})
        background url("../img/category" + i + ".jpg") no-repeat
        background-size cover

.b-popular
    width 100%
    height auto
    &__header
        background-color rgba(255,255,255,.3)
        text-align center
        margin 30px 0
        font-family "Old Stamper"
        text-transform uppercase
        font-size 200%
    &__wrapper
        display flex
        flex-wrap wrap
        justify-content space-around
        margin 30px 0
    &__item
        display flex
        flex-wrap wrap
        justify-content space-between
        align-items center
        width 200px
        height auto
        margin 10px
        transition all 100ms
        &:hover
            transform scale(1.05)
            outline 3px solid rgba(0,0,0,.8)
            transition all 100ms
    &__img
        width 200px
        height 200px
        cursor pointer
    &__make
        width 100%
        margin 5px
        font-size 110%
        font-family "Marvel"
        font-weight bold
        text-transform uppercase
    &__model
        width 100%
        margin 5px
        font-family "Marvel"
    &__price
        margin 5px
        font-family "Marvel"
        font-size 150%
        float left
    &__buy
        margin 5px
        width 80px
        user-select none
        color white
        font-family "Octin Stencil"
        font-size 105%
        text-transform uppercase
        background-color black
        border none
        border-radius 5px
        transition all 200ms
        &:hover
            background-color rgb(74, 74, 74)
            transition all 200ms
            cursor pointer

for i in (1..4)
    .b-popular__item:nth-of-type({i}) .b-popular__img
        background url("../img/popular" + i + ".jpg") no-repeat
        background-size cover
    				
.b-contacts
    width 100%
    height auto
    &__header
        background-color rgba(255,255,255,.3)
        text-align center
        margin-top 30px
        font-family "Old Stamper"
        text-transform uppercase
        font-size 200%
    &__notify
        text-align center
        font-family "Marvel"
        font-size 120%
        margin 10px 0
    &__form
        display flex
        flex-wrap wrap
        justify-content space-between
        margin 0 auto 30px
        width 400px
    &__name
    &__surname
        width 45%
    &__email
    &__message
    &__send
        width 100%
    &__name
    &__surname
    &__email
    &__message
        height 30px
        margin-top 10px
        font-family "Marvel"
        font-size 100%
        font-style italic
        font-weight bold
        border 2px solid rgba(0, 0, 0, 0.4)
        border-radius 5px
        padding 0 5px
    &__send
        margin-top 10px
        height 30px
        user-select none
        color white
        font-family "Octin Stencil"
        font-size 105%
        text-transform uppercase
        background-color black
        border none
        border-radius 5px
        transition all 200ms
        &:hover
            background-color rgb(74, 74, 74)
            transition all 200ms
            cursor pointer

.b-footer
    display flex
    justify-content space-between
    align-items center
    width 100%
    height 125px
    background-color black
    &__logo
        margin 25px
        transition all 200ms

.b-footnav
    &__main-menu
        margin-right 25px
        display flex
        color white
        font-family "Octin Stencil"
        text-transform uppercase
    &__main-item
        margin 0 10px
        &:hover
            color #e3a237
            cursor pointer


// MEDIA QUERIES
@media screen and (max-width 850px)
	.b-header__logo
		width 150px
		height 83px
		transition all 200ms
	.b-hednav
		&__name
			display flex
			cursor pointer
			padding 5px 0
			&::after
			   content ''
			   border-top 7px solid white
			   border-left 7px solid transparent
			   border-right 7px solid transparent
			   border-bottom none
			   margin 7px 0 0 5px
			&:hover + .b-hednav__main-menu
			   opacity 1
			   visibility visible
			   transition opacity 200ms
		&__main-menu
		   display flex
		   flex-direction column
		   position absolute
		   left -90px
		   top 25px
		   width 150px
		   height 140px
		   border-top 2px solid white
		   border-bottom 2px solid white
		   background rgba(255,255,255,0.3)
		   justify-content center
		   align-items flex-end
		   opacity 0
		   visibility hidden
		   &:hover
		      opacity 1
		      visibility visible
		      transition all 200ms
		&__main-item
		   padding 5px 10px
		   margin 0
		   width 150px
		   text-align right
		   &:nth-of-type(1):hover::before,
		   &:nth-of-type(2):hover::before,
		   &:nth-of-type(3):hover::before
		      content ''
		      position absolute
		      left 0
		      border-top 7px solid transparent
		      border-left 7px solid transparent
		      border-right 7px solid white
		      border-bottom 7px solid transparent
		   &:hover .b-hednav__sub-menu
		      opacity 1
		      width 140px
		      transition-delay 200ms
		      transition opacity 200ms, max-height 600ms ease-in-out
		&__sub-menu
		   opacity 0
		   top 0
		   left -140px
				
			
@media screen and (max-width 600px)
	.b-footnav
		&__main-menu
			flex-direction column
			
			
@media screen and (max-width 460px)
	.b-header
		position relative
		&__logo
			width 100px
			height 61px
			margin-top 0
	.b-hednav
		&__main-item
		&__sub-item
		    color white
		&__name
		    color black
		&__main-item
		    &:nth-of-type(1):hover::before,
		    &:nth-of-type(2):hover::before,
		    &:nth-of-type(3):hover::before
		        border-right 7px solid black
		&__main-menu
		&__sub-menu
		    border-top 2px solid black
		    border-bottom 2px solid black
		    background rgba(0,0,0,0.9)
		&__name::after
		    border-top 7px solid black
	.b-slider
		display none
	.b-category
		&__item
		    width 100px
		    height 50px
		&__name
		    margin-top 18px
	.b-popular
		&__item
		    width 100px
		    height 140px
		    align-items center
		    text-align center
		&__img
		    display none
		&__make
		    font-size 100%
		&__model
		    font-size 80%
		&__price
		    font-size 130%
		    width 100%
		&__buy
		    width 100%
	.b-contacts
		&__form
			width 100%
		&__name
		&__surname
			width 100%
		
	for i in (1..4)
		.b-popular__item:nth-of-type({i}) .b-popular__img
			background none
		
	for i in (1..4)
		.b-category__item:nth-of-type({i})
			background none